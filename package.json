{
  "name": "llm-page-translator",
  "version": "1.0.0",
  "description": "Page Translator Chrome Extension",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:pbt": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=pbt"
  },
  "devDependencies": {
    "fast-check": "^3.23.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/*.pbt.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jsdom|parse5|whatwg-url)/)"
    ]
  }
}
