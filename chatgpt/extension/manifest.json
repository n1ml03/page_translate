{
  "manifest_version": 3,
  "name": "Page Translator",
  "version": "1.0.0",
  "description": "Translate web pages using a custom LLM API",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Page Translator",
    "default_icon": "favicon.ico"
  },
  "background": {
    "service_worker": "background.js"
  }
}
